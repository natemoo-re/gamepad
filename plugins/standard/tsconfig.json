{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": false,
        "target": "es2015"
    },
    "files": [
        "src/index.ts"
    ]
}